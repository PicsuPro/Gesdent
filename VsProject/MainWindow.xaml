<Window x:Class="VsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VsProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Button Content="Click to Progressing " DockPanel.Dock="Top" Click="Button_Click"/>
        <StatusBar DockPanel.Dock="Bottom" >
            <StatusBarItem x:Name="LoDo">
                Loding ...
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar x:Name="PBar" Width="120" Height="15" Value="10" />
            </StatusBarItem>

        </StatusBar>
    </DockPanel>
</Window>
