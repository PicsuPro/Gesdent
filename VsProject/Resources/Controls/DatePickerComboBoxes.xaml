<UserControl x:Class="VsProject.Resources.Controls.DatePickerComboBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsProject.Resources.Controls"
             mc:Ignorable="d" >
    

    <StackPanel Orientation="Horizontal">
        <ComboBox x:Name="DayComboBox" Width="60" SelectionChanged="UpdateSelectedDate" DropDownOpened="DayComboBox_DropDownOpened"/>
        <ComboBox x:Name="MonthComboBox" Width="100" Margin="10,0,0,0" SelectionChanged="UpdateSelectedDate"/>
        <ComboBox x:Name="YearComboBox" Width="80" Margin="10,0,0,0" SelectionChanged="UpdateSelectedDate"/>
    </StackPanel>
</UserControl>
