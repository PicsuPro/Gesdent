<ListBoxItem x:Class="VsProject.Resources.Controls.NavListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VsProject.Resources.Controls"
             mc:Ignorable="d"
             d:DesignHeight="24"
             d:DesignWidth="200"
             Margin="5"
            HorizontalAlignment="Center"
             HorizontalContentAlignment="Center"
             >

    <ListBoxItem.Style>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="back"
                                CornerRadius="8"
                                Background="Transparent"
                                Padding="7"
                                  HorizontalAlignment="Center">
                            <Path x:Name="icon"
                                  HorizontalAlignment="Center"
                                  Data="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}"
                                  Stretch="Uniform"
                                  Fill="DarkGray"
                                  Height="24"
                                  Width="24" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="icon" Property="Fill" Value="Gray" />
                                <Setter TargetName="back" Property="Background" Value="LightGray" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="icon" Property="Fill" Value="WhiteSmoke" />
                                <Setter TargetName="back" Property="Background" Value="{StaticResource primary1}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ListBoxItem.Style>
       
</ListBoxItem>
