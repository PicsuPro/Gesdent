<UserControl x:Class="VsProject.Resources.Controls.TimePickerTextBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsProject.Resources.Controls"
             mc:Ignorable="d" >
            <StackPanel Orientation="Horizontal" >
                <!-- Hours -->
            <local:NumericArrowsTextBox  x:Name="txtHours" Focusable="True"
                                 FontSize="13"
                                 Height="26"
                                 Width="32"/>

                <TextBlock Text=":" Margin="10,0" VerticalAlignment="Center" />

                <!-- Minutes -->
            <local:NumericArrowsTextBox x:Name="txtMinutes" Focusable="True"
                                 FontSize="13"
                                 Height="26"
                                 Width="32"/>

            </StackPanel>
</UserControl>
